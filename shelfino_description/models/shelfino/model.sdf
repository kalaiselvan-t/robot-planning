<?xml version='1.0'?>
<sdf version='1.4'>

<!-- !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! USING ONLY URDF NOW !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! -->

<!--
                                                      SHELFINO MODEL 
-->
  <model name="shelfino">

<!--
                                                      BODY OF SHELFINO 
-->
    <link name='base_link'>
      <visual name='body_visual'>
        <pose>0 0 0.25 0 0 0</pose>
        <geometry>
          <box>
            <size>0.5 0.5 0.4</size>
          </box>
        </geometry>
        <material>
          <diffuse>0.7 0.7 0.7 1</diffuse>
          <ambient>0.7 0.7 0.7 1</ambient>
        </material>
      </visual>

      <visual name='front_caster_visual'>
        <pose>-0.2 0 0.05 0 0 0</pose>
        <geometry>
          <sphere>
            <radius> 0.05 </radius>
          </sphere>
        </geometry>
      </visual>

      <visual name='back_caster_visual'>
        <pose>0.2 0 0.05 0 0 0</pose>
        <geometry>
          <sphere>
            <radius> 0.05 </radius>
          </sphere>
        </geometry>
      </visual>

      <collision name='collision'>
        <pose>0 0 0.225 0 0 0</pose>
        <geometry>
          <box>
            <size>0.5 0.5 0.45</size>
          </box>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.8</mu>
              <mu2>0.8</mu2>
              <slip1>0.0</slip1>
              <slip2>0.0</slip2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

<!--
                                                      LEFT WHEEL JOINT 
-->
    <joint name="wheel_left_joint" type="revolute">
      <parent>base_link</parent>
      <child>left_wheel</child>
      <pose>0 0 0 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>

<!--
                                                      LEFT WHEEL
-->
    <link name="left_wheel">
      <pose>0 0.27 0.125 0 1.5707 1.5707</pose>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius> 0.125 </radius>
            <length> 0.03 </length>
          </cylinder>
        </geometry>
        <material>
          <diffuse>0.1 0.1 0.1 1</diffuse>
          <ambient>0.1 0.1 0.1 1</ambient>
        </material>
      </visual>
      
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius> 0.125 </radius>
            <length> 0.03 </length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>100.0</mu>
              <mu2>50.0</mu2>
              <slip1>0.0</slip1>
              <slip2>0.0</slip2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>    


<!--
                                                      RIGHT WHEEL JOINT 
-->
    <joint name="wheel_right_joint" type="revolute">
      <parent>base_link</parent>
      <child>right_wheel</child>
      <pose>0 0 0 0 0 0</pose>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>

<!--
                                                      RIGHT WHEEL 
-->
    <link name="right_wheel">
      <pose>0 -0.27 0.125 0 1.5707 1.5707</pose>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius> 0.125 </radius>
            <length> 0.03 </length>
          </cylinder>
        </geometry>
        <material>
          <diffuse>0.1 0.1 0.1 1</diffuse>
          <ambient>0.1 0.1 0.1 1</ambient>
        </material>
      </visual>

      <collision name="collision">
        <geometry>
          <cylinder>
            <radius> 0.125 </radius>
            <length> 0.03 </length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>100.0</mu>
              <mu2>50.0</mu2>
              <slip1>0.0</slip1>
              <slip2>0.0</slip2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

<!--
                                                      LIDAR FIXED JOINT 
-->
    <joint name="lidar2d_joint" type="fixed">
      <parent>base_link</parent>
      <child>lidar2d::lidar_link</child>
      <pose>0 0 0 0 0 0</pose>
    </joint>

<!--
                                                      LIDAR 
-->
    <include>
      <uri>model://lidar2d</uri>
      <pose>0 0 0.45 0 0 0</pose>
    </include>

<!--
                                                      DIFFERENTIAL DRIVE CONTROLLER 
-->
    <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">

      <ros>
        <!-- Set namespace -->
        <!-- <namespace>gazebo</namespace> -->
      </ros>

      <!-- <alwaysOn>true</alwaysOn> -->

      <update_rate>30</update_rate>

      <!-- wheels -->
      <left_joint>wheel_left_joint</left_joint>
      <right_joint>wheel_right_joint</right_joint>

      <!-- kinematics -->
      <wheel_separation>0.54</wheel_separation>
      <wheel_diameter>0.25</wheel_diameter>

      <!-- limits -->
      <!-- <torque>20</torque> -->
      <max_wheel_torque>20</max_wheel_torque>
      <max_wheel_acceleration>1.0</max_wheel_acceleration>

      <command_topic>cmd_vel</command_topic>

      <!-- output -->
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>false</publish_wheel_tf>

      <odometry_frame>gazebo/odom</odometry_frame>
      <robot_base_frame>gazebo/base_link</robot_base_frame>

      <!-- <odometrySource>ENCODER</odometrySource> -->
      <!-- <odometrySource>WORLD</odometrySource> -->
    </plugin>

<!--
                                                      JOINT STATE PUBLISHER 
-->
    <plugin name="joint_state" filename="libgazebo_ros_joint_state_publisher.so">
      <ros>
        <namespace>gazebo</namespace>
        <remapping>~/out:=joint_states</remapping>
      </ros>
      <update_rate>30</update_rate>
      <joint_name>wheel_left_joint</joint_name>
      <joint_name>wheel_right_joint</joint_name>
    </plugin>   

  </model>
</sdf>
